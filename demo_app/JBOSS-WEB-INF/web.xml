	<distributable />

	<servlet>
		<servlet-name>secTestUser</servlet-name>
		<jsp-file>/secTestUser.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>whoami</servlet-name>
		<jsp-file>/whoami.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>dump</servlet-name>
		<jsp-file>/dump.jsp</jsp-file>
	</servlet>

