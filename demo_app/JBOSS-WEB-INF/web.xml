	<security-constraint>
		<web-resource-collection>
			<web-resource-name>SecUsersColl</web-resource-name>
			<description/>
			<url-pattern>/secTestUser.jsp</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<description />
			<role-name>SecUsers</role-name>
		</auth-constraint>
	</security-constraint>

	<login-config>
		<auth-method>BEARER_TOKEN</auth-method>
		<realm-name>ApplicationRealm</realm-name>
	</login-config>

	<security-role>
		<role-name>SecUsers</role-name>
	</security-role>
	<security-role>
		<role-name>Authenticated</role-name>
